# ============================================
# Backend Configuration
# ============================================
# نوع backend: mock | supabase | django
# - mock: استفاده از Mock data (برای تست و یادگیری)
# - supabase: استفاده از Supabase (برای production)
# - django: استفاده از Django REST API (برای آینده)
DEPLOY_PLATFORM=deno
VITE_BACKEND_TYPE=supabase

# ============================================
# Supabase Configuration
# ============================================
# URL پروژه Supabase
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Anon/Public Key (برای استفاده در Frontend)
VITE_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# ============================================
# Django Configuration (برای آینده)
# ============================================
# URL پروژه Django
VITE_DJANGO_API_URL=http://localhost:8000/api
VITE_API_URL=http://localhost:8000/api

# ============================================
# تنظیمات اپلیکیشن
# ============================================
VITE_APP_NAME=خودروبان
VITE_APP_VERSION=1.0.0

# ============================================
# AI Configuration
# ============================================
# Provider: gemini | openai | openrouter
VITE_AI_PROVIDER=gemini

# API Key (برای همه providers)
VITE_AI_API_KEY=YOUR_AI_API_KEY_HERE

# OpenAI/OpenRouter specific settings (اگر از openai یا openrouter استفاده می‌کنید)
# VITE_OPENAI_API_URL=https://api.openai.com/v1
# VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1

# مدل‌های پیش‌فرض برای هر mode (اختیاری - برای OpenAI/OpenRouter)
# VITE_AI_MODEL_EXPERT=anthropic/claude-3.5-sonnet
# VITE_AI_MODEL_FAST=anthropic/claude-3-haiku
# VITE_AI_MODEL_MAPS=anthropic/claude-3-haiku

# ============================================
# Redirect URLs
# ============================================
# Base URL برای OAuth redirects (در production باید به URL سایت اشاره کند)
# در development: http://localhost:3000
# در production: 
#https://khodroban.netlify.app/
#https://khodroban.deno.dev
# https://khodroban.chbk.dev

VITE_REDIRECT_BASE_URL=http://localhost:3000

# ============================================
# نکات امنیتی
# ============================================
# - هرگز service_role key را در Frontend استفاده نکنید!
# - فایل .env را commit نکنید
