{
  "name": "khodroban-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:spa": "STATIC_PAGES=true vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "format": "prettier --write \"src/**/*.{js,ts,svelte,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,svelte,css,json,md}\"",
    "validate": "npm run check && npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@deno/svelte-adapter": "^0.1.0",
    "@sveltejs/adapter-netlify": "^5.2.4",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.0",
    "@tsconfig/svelte": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.36.0",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "prettier-plugin-svelte": "^3.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "axios": "^1.7.0",
    "chart.js": "^4.4.0",
    "persian-date": "^1.1.0",
    "svelte-i18n": "^4.0.1"
  }
}
